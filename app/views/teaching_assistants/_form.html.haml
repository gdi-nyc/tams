= form_for @teaching_assistant do |f|
  - if @teaching_assistant.errors.any?
    #error_explanation
      %h2= "#{pluralize(@teaching_assistant.errors.count, "error")} prohibited this teaching_assistant from being saved:"
      %ul
        - @teaching_assistant.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name, "First and last name as it appears on your ID (for building security)"
    = f.text_field :name
  .field
    = f.label :email
    = f.email_field :email
  .field
    = label_tag :about, "Tell us a little about yourself. Keep it short and simple!"
    = text_field_tag :about
  .field
    = label_tag :how, "How did you find us?"
    = text_field_tag :how
  .field
    = label_tag :why, "Why are you looking to get involved?"
    = text_area_tag :why
  .actions
    = f.submit 'Submit'
