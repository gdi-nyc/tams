<div class="row">
  <h3 class="red-text text-lighten-2">Courses</h3>

  <%= link_to icon_plus, new_course_path, class: 'waves-effect waves-light btn teal' %>
  <%= link_to 'add TA to upcoming course', new_hour_path, remote: true, class: 'waves-effect waves-light btn teal' %>

  <br /><br />

  <h3 class="teal-text">Upcoming</h3>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Date</th>
        <th># TAs Needed</th>
        <th>Options</th>
      </tr>
    </thead>
    <tbody>
      <% @upcoming.each do |course| %>
        <tr>
          <%= render partial: 'table_view', locals: { course: course } %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h3 class="teal-text">Past</h3>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      <% @past.each do |course| %>
        <tr>
          <%= render partial: 'table_view', locals: { course: course } %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
