<div class="col-lg-10 col-lg-offset-1">
  <h2>Courses</h2>

  <%= link_to 'add a course', new_course_path, class: 'btn btn-primary' %>

  <br /><br />

  <h3>Upcoming</h3>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Date</th>
        <th># TAs Needed</th>
        <th>Options</th>
      </tr>
    </thead>
    <tbody>
      <% @upcoming.each do |course| %>
        <tr>
          <%= render partial: 'table_view', locals: { course: course } %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h3>Past</h3>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      <% @past.each do |course| %>
        <tr>
          <%= render partial: 'table_view', locals: { course: course } %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
