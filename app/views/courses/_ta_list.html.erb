<div id="ta-list-modal" class="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">TAs for <%= @course.name %></h4>
      </div>
      <div class="modal-body">
        <% if !@course.teaching_assistants.any? %>
          No TAs have signed up yet!
        <% end %>

        <% @course.teaching_assistants.each do |ta| %>
          <div class="well well-sm">
            <%= ta.signed_up_for(@course) %>
            <%= link_to ta.name, teaching_assistant_path(ta.private_id) %>
            <% if ta.is_ta_for?(@course) %>
              <%= link_to icon_book + ' Use hours', { controller: :hours, action: :update, id: @course.hour_for(ta), hour: { num: -@course.student_hours } }, method: :put, class: "badge warning" %>
            <% else %>
              <%= link_to icon_history + ' Make TA', { controller: :hours, action: :update, id: @course.hour_for(ta), hour: { num: @course.credit_hours } }, method: :put, class: "badge approved" %>
            <% end %>
              <%= link_to icon_ban + ' Remove', { controller: :hours, action: :destroy, id: @course.hour_for(ta) }, method: :delete, class: "badge warning" %>
            <% if ta.missing_email_for?(@course) %>
              <%= icon_email %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
