<%= form_for @course, html: { class: "form" } do |f| %>
  <% if @course.errors.any? %>
    <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>
    <ul>
      <% @course.errors.full_messages.each do |msg| %>
        <li>
          <%= msg %>
        </li>
      <% end %>
    </ul>
  <% end %>

    <%= f.label :name, 'Course name' %>
    <%= f.text_field :name %>

    <div class="select">
      <span class="arr"></span>
      <%= f.label :date %>
      <%= f.date_select :date %>
    </div>

    <%= f.label :start_time %>
    <%= f.time_select :start_time %>

    <%= f.label :end_time %>
    <%= f.time_select :end_time %>

    <br /><br />

    <%= f.label :url, 'Meetup URL' %>
    <%= f.text_field :url %>

    <%= f.label :location %>
    <%= f.text_field :location %>

    <%= f.label :meetup_id, "Meetup ID" %>
    <%= f.text_field :meetup_id %>

    <%= f.label :credit_hours, 'Number of credit hours received' %>
    <%= f.number_field :credit_hours %>

    <%= f.label :num_tas_neeed, 'Number of teaching assistants needed' %>
    <%= f.number_field :num_tas_needed %>

    <%= f.label :series_id, "Is this course part of a series?" %>
    <%= f.select(:series_id, @series.collect {|s| ["#{s.name} (ending #{s.pretty_end_date})", s.id]}, {:include_blank => 'Course series'}) %>

    <br />

    <%= f.submit 'Save', class: 'main-button form-button' %>
<% end %>
