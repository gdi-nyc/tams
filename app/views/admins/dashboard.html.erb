<div class="col-lg-12">
  <h2>Prospective TAs</h2>

  <% if TeachingAssistant.prospective.any? %>
    <p>Approving an application will send them an email and set the TA's status to pending.</p>
    <table class="table table-striped table-hover">
      <thead>
        <th>Name</th>
        <th>Options</th>
      </thead>
      <tbody>
        <% TeachingAssistant.prospective.each do |ta| %>
        <tr>
          <td class="col-lg-4">
            <%= ta.name %>
          </td>
          <td class="col-lg-4">
            <%= link_to(icon_rocket + ' upgrade to pending', { controller: :emails, action: :welcome, emails: { teaching_assistant: ta } }) %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>There are currently no prospective TAs.</p>
  <% end %>
</div>

<div class="col-lg-12">
  <h2>Monthly Course Emails</h2>
  <p>
    This will email all teaching assistants! Use with caution...<br /><br />
    <%= link_to('send email', { controller: :emails, action: :monthly }, method: :get, class: 'btn btn-primary') %>
  </p>
</div>
