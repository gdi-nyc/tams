<%= form_for login_path, method: :post do %>
  <div class="input-field col s12">
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>

  <div class="input-field col s12">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <%= submit_tag 'login', class: 'waves-effect waves-light btn cyan darken-4' %>
<% end %>
