<%= form_for sessions_path, method: :post, html: { class: 'form-horizontal' } do %>
  <div class="form-group">
    <%= label_tag :name, 'Name', class: 'col-lg-3 control-label' %>
    <div class="col-lg-9">
      <%= text_field_tag :name, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :password, 'Password', class: 'col-lg-3 control-label' %>
    <div class="col-lg-9">
      <%= password_field_tag :password, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-3">
      <%= submit_tag 'Login', class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
