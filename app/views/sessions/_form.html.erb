<%= form_for sessions_path, method: :post do %>
  <div class="input-field col s12">
    <%= label_tag :name %>
    <%= text_field_tag :name, nil, class: 'form-control' %>
  </div>

  <div class="input-field col s12">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, class: 'form-control' %>
  </div>

  <%= submit_tag 'login', class: 'waves-effect waves-light btn cyan darken-4' %>
<% end %>
