<!DOCTYPE html>
<html>
  <head>
    <title>GDI Chicago TAMS</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'https://use.fontawesome.com/9e05654630.js' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <%= link_to 'GDI Volunteering', root_path, class: 'navbar-brand' %>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
          <ul class="nav navbar-nav">
            <% if is_admin? %>
              <li><%= link_to 'Dashboard', admins_dashboard_path %></li>
              <li><%= link_to 'Teaching Assistants', teaching_assistants_path %></li>
              <li><%= link_to 'Courses', courses_path %></li>
            <% else %>
              <li><%= link_to 'Sign Up', new_teaching_assistant_path %></li>
              <li><%= link_to 'Admin Login', new_session_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="col-lg-offset-2">
      <% if notice %>
        <div class="col-lg-12">
          <div class="alert alert-dismissible alert-success col-lg-10">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <%= notice %>
          </div>
        </div>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
