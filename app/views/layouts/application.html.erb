<!DOCTYPE html>
<html>
  <head>
    <title>GDI Chicago TAMS</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'https://use.fontawesome.com/9e05654630.js' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <% if is_admin? %>
            <%= link_to 'GDI Volunteering', admins_dashboard_path, class: 'navbar-brand' %>
          <% else %>
            <%= link_to 'GDI Volunteering', root_path, class: 'navbar-brand' %>
          <% end %>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
          <% if is_admin? %>
            <ul class="nav navbar-nav">
                <li><%= link_to 'Teaching Assistants', teaching_assistants_path %></li>
                <li><%= link_to 'Courses', courses_path %></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to 'Logout', session_path(session[:current_user_id]), method: :delete %></li>
            </ul>
          <% end %>
        </div>
      </div>
    </nav>

    <div class="container" id="main">
      <% if notice %>
        <div class="alert alert-dismissible alert-success">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= notice %>
        </div>
      <% end %>

      <%= yield %>

    </div>
  </body>
</html>
