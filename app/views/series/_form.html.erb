<%= form_for @series, html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :name, 'Series name', class: 'col-lg-3 control-label' %>
    <div class="col-lg-9">
      <%= f.text_field :name, class: 'form-control', required: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :end_date, class: 'col-lg-3 control-label' %>
    <div class="col-lg-9">
      <%= f.date_select :end_date, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-3">
      <%= f.submit 'save', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
